        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="352,166,0,0" Text="Select an Option" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <RadioButton x:Name="YesButton" Content="Yes" IsChecked="True" HorizontalAlignment="Left" Margin="317,245,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="NoButton" Content="No" IsChecked="True" HorizontalAlignment="Left" Margin="440,252,0,0" VerticalAlignment="Top"/>
